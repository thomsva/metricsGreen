upstream apiurl {
    server ${API_URL};
}

server {
    listen      ${NGINX_PORT};
    listen [::]:${NGINX_PORT};

    location /graphql {
        proxy_set_header Host $host;
        proxy_pass http://apiurl;
    }

    location / {
        root /usr/share/nginx/html;
        index index.html index.htm;
        try_files $uri $uri/ /index.html =404;
    }   
}